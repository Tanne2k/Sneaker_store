@{
    ViewData["Title"] = "Lịch sử đơn hàng";
}


<div class="container" style="margin-top: 200px;">
    @if (Model.Count == 0)
    {
        @* <div class="col"> *@
        <div class="text-center">
            <p>Không có đơn hàng nào</p>
        </div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Ngày đặt hàng</th>
                    <th>Tổng tiền</th>
                    <th>Chi tiết đơn hàng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                        @* <td>@order.TotalPrice.ToString("C")</td> *@
                        <td>@order.TotalPrice.ToString("N0") VNĐ</td>
                        <td>
                            <ul>
                                @foreach (var orderDetail in order.OrderDetails)
                                {
                                    @* <li>@orderDetail.Product.Name - Số lượng: @orderDetail.Quantity - Giá: @orderDetail.Price.ToString("C")</li> *@
                                    <li>@orderDetail.Product.Name - Số lượng: @orderDetail.Quantity - Giá/đôi: @orderDetail.Price.ToString("N0") VNĐ</li>
                                }
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
