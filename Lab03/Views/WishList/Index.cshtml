@model Wishlist

@{
    ViewData["Title"] = "Danh sách yêu thích";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        body {
            background-image: url('https://www.elleman.vn/wp-content/uploads/2018/08/13/gi%C3%A0y-sneakers-2-elle-man-8.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
    </style>
</head>

<div class="container" style="margin-top: 150px">
    <!-- Wishlist Page Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="table-responsive">
                <style>
                    tbody {
                        background-color: #ffffff; /* Màu trắng */
                        color: black;
                    }
                </style>

                <style>
                    .table-bordered {
                        background-color: black;
                        color: white; /* Adjust text color for better readability */
                    }
                </style>
                <table class="table table-bordered" style="text-align:center">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>Sản phẩm</th>
                            <th>Kích cỡ</th>
                            <th>Màu sắc</th>
                            <th>Giá</th>
                            <th class="action">Hành động</th>
                            <th class="action">Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Dữ liệu của bảng -->
                    </tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td><img src="@item.ImageUrl" alt="@item.Name" width="30" height="40" style="text-align: center; " /></td>
                            <td style="padding: 45px; margin: auto; text-align: center;">@item.Name</td>
                            <td style="padding: 45px; margin: auto; text-align: center;">@item.size</td>
                            <td style="padding: 45px; margin: auto; text-align: center;">@item.color</td>
                            <td class="mt-2" style="padding: 45px; margin: auto; text-align: center;">
                                @item.Price.ToString("N0") VNĐ
                            </td>
                            @* <td class="action" style="padding: 45px; margin: auto; text-align: center;">
                        <form class="addToCartForm" data-product-id="@item.ProductId" method="post" action="@Url.Action("AddToCart", "ShoppingCart")" class="me-2">
                        <input type="hidden" name="productId" value="@item.ProductId" />
                        <input type="hidden" name="quantity" value="1" />
                        <button type="submit" class="btn btn-danger add-to-cart-btn" style="width: 133px;">
                        <i class="bi-cart-fill me-1"></i>Mua
                        </button>
                        </form>
                        </td> *@

                            <td class="action" style="padding: 45px; margin: auto; text-align: center;">
                                <div class="mt-3 d-flex justify-content-center">
                                    <a asp-action="ChiTiet" asp-controller="Product" asp-route-id="@item.ProductId" method="post" class="btn btn-warning">
                                        <i class="bi bi-eye-fill me-1"></i>Xem chi tiết
                                    </a>
                                </div>
                            </td>
                            <td class="action" style="padding: 45px; margin: auto; text-align: center;">
                                <form asp-action="RemoveFromWishList" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button class="btn btn-md rounded-circle bg-light border mt-2" type="submit">
                                        <i class="fa fa-times text-primary" style="display: block; margin: auto;"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>

            <div class="mb-2 d-flex justify-content-center">
                <div class="text-center border-0  ">
                    <form asp-action="RemoveAllFromWishList" method="post">
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Xóa tất cả
                        </button>
                    </form>
                </div>

                <a asp-controller="Product" asp-action="Index" style="text-decoration: none;">
                    <button type="button" class="btn btn-warning ms-2" style="width: 133px;">
                        <i class="bi bi-arrow-return-left"></i>
                    </button>
                </a>
            </div>

        </div>
    </div>
</div>
