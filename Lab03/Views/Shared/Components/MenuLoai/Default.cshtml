@using System.Collections
@model IEnumerable<Lab03.ViewModels.MenuLoaiVM>

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Thương hiệu</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach (var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="Product" asp-action="Index" asp-route-loai="@item.MaLoai" class="custom-red">
                        @* <a asp-controller="Product" asp-action="Index" asp-route-loai="@item.MaLoai" class="custom-dark-yellow"> *@
                            <i class="me-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="dark" class="bi bi-arrow-down-right" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M14 13.5a.5.5 0 0 1-.5.5h-6a.5.5 0 0 1 0-1h4.793L2.146 2.854a.5.5 0 1 1 .708-.708L13 12.293V7.5a.5.5 0 0 1 1 0z" />
                                </svg>
                            </i>@item.TenLoai
                        </a>
                        <span>(@item.SoLuong)</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>

<style>
    /* .custom-dark-yellow {
        color: #FFAA00; /* Mã màu hex cho màu vàng đậm 
    } */

    .custom-red {
        color: red;
    }

</style>