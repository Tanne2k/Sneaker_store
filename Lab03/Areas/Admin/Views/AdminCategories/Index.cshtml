@model IEnumerable<Lab03.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div>
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800 text-center ">Danh sách loại sản phẩm</h1>
    <div class="d-flex justify-content-end mb-3 mr-1">
        <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
    </div>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên loại sản phẩm</th>
                            <th>Lựa chọn</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pen text-warning"></i></a> |
                                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-info"></i></a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash text-danger"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

