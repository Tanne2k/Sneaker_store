@* @model Lab03.Models.Product *@
@model Lab03.Models.Product

@{
    ViewData["Title"] = "Display";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết</h1>

<div>
    <h4>Sản phẩm</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Name) *@
            Tên sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Price) *@
            Giá
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Description) *@
            Mô tả ngắn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Ảnh chính
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageUrl)" width="150px" height="150px" alt="" />
        </dd>
        <dt class="col-sm-2">
            Danh sách ảnh phụ 
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.SideImage1)" width="150px" height="150px" alt="" />
            <img src="@Html.DisplayFor(model => model.SideImage2)" width="150px" height="150px" alt="" />
            <img src="@Html.DisplayFor(model => model.SideImage3)" width="150px" height="150px" alt="" />
        </dd>
    
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Category) *@
            Tên loại 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            Màu sắc
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Colors.Name)
        </dd>
        <dt class="col-sm-2">
            Kich thước
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sizes.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Update" asp-route-id="@Model?.Id" class="btn btn-danger" >Chỉnh sửa</a> |
    <a asp-action="Index" class="btn btn-primary">Quay về</a>
</div>
