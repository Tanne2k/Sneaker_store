@page "/Admin/Role/updaterole/{handler?}/"
@using Lab03.Areas.Admin.Pages.Role
@model AddModel
@{
    var btnText = Model.IsUpdate ? "Cập nhật" : "Tạo mới";
}

<div>
    <h4>@ViewData["Title"]</h4>
    <partial name="_StatusMessage" model="@Model.StatusMessage" />

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="Input.Id">
                    <input type="hidden" asp-for="IsUpdate">
                    <label asp-for="Input.NameRole"></label>
                    <input asp-for="Input.NameRole" class="form-control">
                    <span asp-validation-for="Input.NameRole" class="text-danger"></span>
                </div>

                <button id="add-or-edit-role" type="submit"
                        asp-page-handler="Add" class="btn btn-danger">
                    @btnText
                </button> |

                <a class="btn btn-primary" asp-page="./Index">Quay về</a>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>